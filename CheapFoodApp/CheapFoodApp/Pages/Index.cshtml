@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<p>The value if isRunningOnAzure is: @Model.isRunningOnAzure</p>




@{
    var activeTab = Request.Query["tab"].ToString() ?? "1";
}

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link @(activeTab == "1" ? "active" : "")" href="?tab=1">Tab 1</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(activeTab == "2" ? "active" : "")" href="?tab=2">Foods</a>
    </li>
</ul>

<div class="tab-content mt-3">
    @if (activeTab == "1")
    {
        <div>
            <p>Content for Tab 1</p>
        </div>
    }
    else if (activeTab == "2")
    {
        <div>
            <p>Content for Tab 2</p>

            <form method="post">
                <input type="text" name="InputText" />
                <button type="submit" name="new food" value="new_food">Submit</button>
            </form>

        </div>
    }
</div>



